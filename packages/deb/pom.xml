<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>im.bci</groupId>
    <artifactId>nanim-deb</artifactId>
    <packaging>jar</packaging>
    <name>nanim-deb</name>
    <url>http://devnewton.bci.im</url>
    <parent>
        <groupId>im.bci</groupId>
        <artifactId>nanim</artifactId>
        <version>1.4</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <nanim_version>${project.version}</nanim_version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>font2nanim</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>gif2nanim</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nanimenc</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nanimdec</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nanimls</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nanimmerge</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nanimrename</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nanimspeed</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nanimview</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nanimopt</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>sheet2nanim</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nanimstudio</artifactId>
        </dependency>
        <dependency>
            <groupId>im.bci</groupId>
            <artifactId>nimageopt</artifactId>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>deb</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <execution>
                                <id>copy-resources</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${basedir}/target/launchers</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${basedir}/../generic/src/izpack/launchers</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>              
                                </configuration>            
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.8</version>
                        <executions>
                            <execution>
                                <id>copy-dependencies</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <excludeTransitive>false</excludeTransitive>
                                    <outputDirectory>${project.build.directory}/lib</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>jdeb</artifactId>
                        <groupId>org.vafer</groupId>
                        <version>1.0.1</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>jdeb</goal>
                                </goals>
                                <configuration>
                                    <deb>${project.build.directory}/nanim_${project.version}.deb</deb>
                                    <dataSet>
                                        <data>
                                            <src>${project.build.directory}/lib</src>
                                            <type>directory</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/opt/nanim</prefix>
                                                <filemode>755</filemode>
                                            </mapper>
                                        </data>
                                        <data>
                                            <src>${project.build.directory}/launchers</src>
                                            <type>directory</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/opt/nanim</prefix>
                                                <filemode>755</filemode>
                                            </mapper>
                                        </data>
                                        <data>
                                            <src>${basedir}/../../nanimstudio/src/main/resources/icon.png</src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/opt/nanim</prefix>
                                            </mapper>
                                        </data>
                                        <data>
                                            <src>${basedir}/../../LICENSE.md</src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/opt/nanim</prefix>
                                            </mapper>
                                        </data>
                                        <data>
                                            <src>${basedir}/src/deb/nanimstudio.desktop</src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/usr/share/applications</prefix>
                                            </mapper>
                                        </data>
                                    </dataSet>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
